<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<h1>Runlog <%= @runlogs.first.run_count %></h1>
<h1>Download GPX file</h1>
<%= link_to "GPX download", runlog_gpx_download_path %>

<div id='map' style='width: 800px; height: 400px'></div>

<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": 0,
      "lng": 0,
      "picture": {
        "url": "http://people.mozilla.com/~faaborg/files/shiretoko/firefoxIcon/firefox-32.png",
        "width":  32,
        "height": 32
      },
      "infowindow": "hello!"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
  
</script>

<%= line_chart @chart_data, xtitle: "Time", ytitle: "温度", height: "500px", min: "25.0" %>

<table>
  <thead>
    <tr>
      <th>時刻</th>
      <th>緯度</th>
      <th>経度</th>
      <th>温度</th>
    </tr>
  </thead>
  <tbody>
    <% @runlogs.each do |runlog| %>
      <tr>
        <td><%= runlog.run_at %></td>
        <td><%= runlog.latitude %></td>
        <td><%= runlog.longitude %></td>
        <td><%= runlog.temperature %></td>
      </tr>
    <% end %>
  </tbody>
</table>
